<% include ./partials/header %>
   

    <section id="register" class="register contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <h3>Sign Up</h3>
                        
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" action="/register" method="POST">
                        <div class="row">
                            <div class="container">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Username(4-12 characters)" name ="username" maxlength="12" id="name" required data-validation-required-message="Please enter your username.">
                                    <p class="help-block text-danger">[a-z A-z _ ] is allowed</p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email-id" name="email" id="email" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Password(8-12 characters)" maxlength="12" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" name = "password" id="password" required data-validation-required-message="Please enter your password.">
                                    <p class="help-block text-danger">Atleast one uppercase,lowercase and digit.</p>
                                </div>


                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Confirm-Password(8-12 characters)" maxlength="12" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" name="confirm_password" id="confirm-password" required data-validation-required-message="Please enter your password.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            </div>
      
    </section>


<% include ./partials/footer %> 