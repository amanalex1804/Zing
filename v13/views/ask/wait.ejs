<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<link rel="stylesheet"  href="/css/styles.css">

</head>

<script src="/socket.io/socket.io.js"></script>

<body class="chat">
    <div class="chat__sidebar"> 
    	<h3>People</h3>
    	<div id= "users"></div>
    	<div id="checkRoom"><p style="visibility: hidden"> <%= room%> </p></div>
    	<div id="checkName"><p style="visibility: hidden"> <%= currentUser.username%> </p></div>
         

    	<div id="close" style="margin:450px 0px 45px 50px"><button><a href="/close/<%=room%>" style="text-decoration:none" ><h3>Close</h3></a></p><button></div> 


    </div>

    <div class="chat__main">
      	<ol id="messages" class="chat__messages"></ol>
	<div class="chat__footer">
			<form  id="message-form">
			    <input name="message" type="text" placeholder="Message" autofocus autocomplete="off" />
			    <button>Send</button>
		    </form>

    		 <div class="filebutton">Send Image <input type="file" id="imagefile" accept="image/*"></div>
	</div>
</div>

<script src="/js/mustache.js"> </script>
<script id="messages-template" type="text/template">
	<li class="message">
		<div class="message__title">
			<h4> {{from}}<h4>
				<span>{{createdAt}}</span>
		</div>
		<div class="message__body">
			<p> {{text}} </p>
		</div>
	 </li>
</script>
<script id="location-messages-template" type="text/template">
	<li class="message">
		<div class="message__title">
			<h4> {{from}}<h4>
				<span>{{createdAt}}</span>
		</div>
		<div class="message__body">

			<a><img class="thumbnail" src="{{text}}"/></a>

		</div>
	 </li>
</script>
<script src="/js/jquery-3.1.0.min.js"></script>
<script src="/js/chat.js"> </script>
<script src="/js/moment.js"> </script>
<script src="/js/deparam.js"> </script>
</body>
</html>